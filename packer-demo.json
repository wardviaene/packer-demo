{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-east-1",
    "source_ami": "ami-085925f297f89fce1",
    "instance_type": "t2.nano",
    "ssh_username": "ubuntu",
    "ami_name": "packer-nodejs {{timestamp}}",
    "profile": "terraform"
  }],
  "provisioners": [
  {
    "type": "file",
    "source": "app",
    "destination": "/tmp/app"
  },
  {
    "type": "shell",
    "scripts": [  "scripts/deploy.sh"   ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
  }]
}
