{
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "source_ami": "ami-09d95fab7fff3776c",
    "instance_type": "t2.nano",
    "ssh_username": "ec2-user",
    "ami_name": "packer-nodejs {{timestamp}}",
    "profile": "terraform"
  }],
  "provisioners": [
  {
    "type": "file",
    "source": "app",
    "destination": "/tmp/app"
  },
  {
    "type": "shell",
    "scripts": [  "scripts/deploy.sh"   ],
    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
    "pause_before": "10s"
  }]
}
